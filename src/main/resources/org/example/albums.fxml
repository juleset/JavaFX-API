<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="442.0" prefWidth="470.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.AlbumsJfxController">
   <children>
      <Label text="Albums List" />
      <TableView fx:id="myTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="artistColumn" prefWidth="75.0" text="Artist" />
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="yearColumn" prefWidth="75.0" text="Year" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
          <children>
              <Label text="Artist: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
              <TextField fx:id="artistInput" GridPane.columnIndex="1" GridPane.rowIndex="0" />
              <Label text="Album: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
              <TextField fx:id="titleInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              <Label text="Year: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
              <TextField fx:id="yearInput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
          </children>
      </GridPane>
      <Button fx:id="primaryButton" onAction="#addItem" text="Add" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
